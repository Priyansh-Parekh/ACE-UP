<div class="main-content-tech_supp">
  <!-- Header -->
  <header>
    <h2 class="glow-text">Technical Support</h2>
    <p class="sub-heading">
      Facing issues? Fill out the form below and our team will assist you.
    </p>
  </header>

  <!-- Support Form -->
  <section class="support-form">
    <form>
      <label for="name">Full Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Enter your name"
        required
      />

      <label for="emaiil">Email Address:</label>
      <input
        type="email"
        id="emaiil"
        name="email"
        placeholder="Enter your email"
        required
      />

      <label for="issue">Issue Type:</label>
      <select id="issue" name="issue">
        <option value="crash">Game Crashes</option>
        <option value="install">Installation Issues</option>
        <option value="lag">High Latency / Lag</option>
        <option value="audio">Audio / Sound Problems</option>
        <option value="login">Login Issues</option>
        <option value="other">Other</option>
      </select>

      <label for="description">Describe Your Issue:</label>
      <textarea
        id="description"
        name="description"
        rows="4"
        placeholder="Provide details about the issue..."
        required
      ></textarea>

      <button
        type="submit"
        class="submit-btn"
        onclick="alert('Request Submitted')"
      >
        Submit Request
      </button>
    </form>
  </section>
</div>
